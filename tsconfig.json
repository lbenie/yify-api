{
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "node",
    "target": "es6",
    "module": "es2015",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "@types/*": ["./node_modules/@types/*"] // For extra safety when we get mismatches on type files and it decides to use redirected files.
    }
  },
  "exclude": ["node_modules", "**/*.spec.ts"],
  "include": [
    "src/**/*.ts",
    "__mocks__/axios.ts",
    "__test__/yify-service.spec.ts"
  ]
}
